<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_profile_toko_terdekat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/toko2" />

        <TextView
            android:id="@+id/nama_toko_terdekat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinssemibold"
            android:shadowColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_profile_toko_terdekat"
            app:layout_constraintTop_toTopOf="@+id/iv_profile_toko_terdekat"
            tools:text="Green Campus Outdoor" />

        <TextView
            android:id="@+id/alamat_toko_terdekat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Jln. Jend. Sudirman No.25"
            app:layout_constraintStart_toStartOf="@+id/nama_toko_terdekat"
            app:layout_constraintTop_toBottomOf="@+id/nama_toko_terdekat" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>